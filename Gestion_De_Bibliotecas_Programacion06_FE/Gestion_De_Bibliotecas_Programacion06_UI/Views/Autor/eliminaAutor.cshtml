@model Gestion_De_Bibliotecas_Programacion06_UI.Models.mAutor

@{
    ViewData["Title"] = "eliminaAutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar autor</h1>

<h3>¿Está seguro(a) que desea eliminar el registro seleccionado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdAutor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdAutor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TcNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TcNacionalidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcNacionalidad)
        </dd>
    </dl>
    
    <form asp-action="delAutor">
        @Html.HiddenFor(model => model.TnIdAutor)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="obtenerAutor">Regresar</a>
    </form>
</div>
