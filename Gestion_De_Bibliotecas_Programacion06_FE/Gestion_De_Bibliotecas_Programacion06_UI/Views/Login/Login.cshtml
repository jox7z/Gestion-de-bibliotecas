@model Gestion_De_Bibliotecas_Programacion06_UI.Models.Usuario


@{
    ViewData["Title"] = "Ingreso al sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100">
    <h1 class="text-center mb-4">Ingreso al sistema</h1>

    <form asp-action="accesoUsuario" class="w-100" style="max-width: 400px;">
        <div class="modal-content shadow-lg p-4">
            <div class="modal-header bg-primary text-white rounded">
                <h5 class="modal-title w-100 text-center">Iniciar Sesión</h5>
            </div>

            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="usuario" class="form-label">Usuario</label>
                    <input asp-for="usuario" class="form-control" />
                    <span asp-validation-for="usuario" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="contrasena" class="form-label">Contraseña</label>
                    <input asp-for="contrasena" class="form-control" type="password" />
                    <span asp-validation-for="contrasena" class="text-danger"></span>
                </div>
            </div>

            <div class="modal-footer justify-content-center border-0">
                <input type="submit" value="Ingresar" class="btn btn-outline-primary w-100" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


