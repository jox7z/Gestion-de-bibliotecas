@model Gestion_De_Bibliotecas_Programacion06_UI.Models.mLibro

@{
    ViewData["Title"] = "eliminaLibro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar libro</h1>

<h3>¿Está seguro(a) que desea eliminar el registro seleccionado?</h3>
<div>
    <h4>mLibro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdLibro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdLibro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdAutor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdAutor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TcTitulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcTitulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TcEditorial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcEditorial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TcCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcCategoria)
        </dd>
    </dl>
    
    <form asp-action="delLibro">
        @Html.HiddenFor(model => model.TnIdLibro)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="obtenerLibro">Regresar</a>
    </form>
</div>
