@model Gestion_De_Bibliotecas_Programacion06_UI.Models.mPrestamo

@{
    ViewData["Title"] = "eliminaPrestamo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar prestamo</h1>

<h3>¿Está seguro(a) que desea eliminar el registro seleccionado?</h3>
<div>
    <h4>mPrestamo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdPrestamo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdPrestamo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdLibro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdLibro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TnIdCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TnIdCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TfFecPrestamo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TfFecPrestamo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TfFecDevolucion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TfFecDevolucion)
        </dd>
    </dl>
    
    <form asp-action="delPrestamo">
        @Html.HiddenFor(model => model.TnIdPrestamo)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="obtenerPrestamo">Regresar</a>
    </form>
</div>
